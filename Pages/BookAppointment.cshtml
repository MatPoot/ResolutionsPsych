@page
@model ResolutionsPsych.Pages.BookAppointmentModel
@{
}

<label>@Model.Message</label>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Time"></label>
            <input asp-for="Time" class="form-control"/>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

    </div>

    <!--
        <select id="ddlTime" asp-for="TimeSelected" asp-items="Model.AvailableTimes"></select>
    <input asp-for="TimeSelected" name="TimeSelected" />
    <br />
    -->

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" class="form-control"/>
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="SelectedID">Select A Counsellor</label>
            <select id="ddlCounsellor" asp-for="SelectedID" asp-items="@Model.SelectCounsellorList"></select>
            <span asp-validation-for="CounsellorName" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" value="Book Appointment" />
</form>

